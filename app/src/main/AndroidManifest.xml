    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InformationActivity" />
        <activity android:name=".activity_host.HostActivity" />
        <activity android:name=".ResetActivity" />
        <activity android:name=".LogActivity" />
        <activity android:name=".ReviseActivity" />
        <activity android:name=".SignActivity" />
        <activity android:name=".CreateActivity" />
        <activity android:name=".AuthnActivity" />
        <activity android:name=".activity_admin.AdminActivity" />
        <activity android:name=".SecurityActivity" />
        <activity android:name=".MainActivity"/>
    </application>

</manifest>